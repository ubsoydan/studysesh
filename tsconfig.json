{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/components/*": ["./components/*"],
            "@/styles/*": ["./styles/*"],
            "@/lib/*": ["./lib/*"],
            "@/assets/*": ["./assets/*"],
            "@/app/*": ["./app/*"],
            "@/prisma/*": ["./prisma/*"],
            "@/public/*": ["./public/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "components/WidgetNavContainer.jsx",
        "components/WidgetNav.jsx",
        "components/TaskEdit.jsx"
    ],
    "exclude": ["node_modules"]
}
